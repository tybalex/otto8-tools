Name: Slack OAuth Bot Credential
Share Credential: slack-bot-cred as slack.bot.write
Type: credential

---
Name: slack-bot-cred
Tools: ../../oauth2

#!sys.call ../../oauth2

{
	"oauthInfo": {
		"integration": "slack",
		"token": "SLACK_TOKEN",
		"scope": [
			"channels:history",
			"groups:history",
			"im:history",
			"mpim:history",
			"channels:read",
			"files:read",
			"im:read",
			"team:read",
			"users:read",
			"groups:read",
			"chat:write",
			"groups:write",
			"mpim:write",
			"im:write",
			"app_mentions:read"
		]
	}
}